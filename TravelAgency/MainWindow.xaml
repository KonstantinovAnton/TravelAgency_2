    <Window x:Class="TravelAgency.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TravelAgency"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Background="#FF67B6FB"    
            >
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Left">
            <Image Margin="10,0" Source="/Resources/plane.png"></Image>
            <Button Name="gotoPageRegistration" Click="gotoPageRegistration_Click" Margin="5,0" Width="100" Height="25">Регистрация</Button>
            <Button Name="gotoPageАuthorization" Click="gotoPageАuthorization_Click" Margin="5,0" Height="25" Width="100" >Авторизация</Button>

        </StackPanel>
           
          
        <Frame Name="frm" Grid.Row="1" NavigationUIVisibility="Hidden">
        </Frame>

    </Grid>
</Window>
